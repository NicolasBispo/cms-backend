{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"], // Include 'dom' for DOM-related interfaces
    "target": "es2015", // Target ECMAScript 2015 or higher
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "useDefineForClassFields": true // Enable private methods and accessors
  }
}